<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="8dp"
android:background="@color/white"
android:elevation="2dp"
android:layout_marginBottom="8dp">

    <!-- Nome do Produto no Pedido -->
    <TextView
        android:id="@+id/nomePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp" />

    <!-- Status do Pedido (Em andamento ou Finalizado) -->
    <TextView
        android:id="@+id/statusPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Em andamento"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <!-- Botão Avaliar (Visível somente para pedidos finalizados) -->
    <Button
        android:id="@+id/btnAvaliarPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avaliar"
        android:visibility="gone"
        android:backgroundTint="@color/azul_escuro"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

</LinearLayout>